<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employeelogin"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#78BFEB"/>
    
    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:backgroundTint="#78BFEB"
        android:padding="8dp"
        android:contentDescription="Back"/>

    <TextView
        android:id="@+id/txtViewThird"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:text="Blue Planet"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Water Refilling Station"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Hello!"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Welcome back."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:src="@drawable/shadow"
        android:layout_alignBottom="@+id/waterGallon"
        android:layout_marginLeft="205dp"
        android:elevation="8dp"
        android:scaleType="fitCenter"/>
    
    <ImageView
        android:id="@+id/waterGallon"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@drawable/watergallon"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="120dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:outlineSpotShadowColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@color/white"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:background="@color/white">
        <TextView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Login"
            android:textSize="45sp"
            android:textColor="#04608D"
            android:textStyle="normal|bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:elevation="50dp"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:hint="Username"
                android:textColorHint="@color/black"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="-300dp"
                android:drawableStart="@drawable/user"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:hint="Password"
                android:textColorHint="@color/black"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="-300dp"
                android:drawableStart="@drawable/password"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginLeft="-300dp"
                android:backgroundTint="#113C74"
                android:layout_marginTop="350dp"
                android:text="Login"
                android:textSize="24sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>